secret_word = "love"
guess = ""
guess_count = 0
guess_limit = 3
out_of_guesses = false

while guess != secret_word
 puts "Enter guess:"
 if guess_count == guess_limit
  puts "You are out of guesses, friend"
  break
 end
 guess = gets.chomp()
  guess_count += 1
 if guess == secret_word
  puts "You won"
 end
end


